<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cameraPreviewScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.knx.framework.main.cameraUI.NonInteractableView 
        android:id="@+id/non_interactable_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    </com.knx.framework.main.cameraUI.NonInteractableView>

    <com.knx.framework.main.cameraUI.FlatCircularButton
        android:id="@+id/exitBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:background="@drawable/close_button_white"
        android:contentDescription="@string/imageButton" />
    
    <com.knx.framework.main.cameraUI.FlatCircularButton
		android:id="@+id/settingBtn"
		android:layout_width="44dp"
		android:layout_height="44dp"
		android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:focusable="true"
		android:background="@drawable/setting_button"
		android:contentDescription="@string/imageButton" />
    
    <com.knx.framework.main.cameraUI.ARiseCameraIndicator
        android:id="@+id/recordingIndicator"
        android:layout_width="44dp"
		android:layout_height="44dp"
		android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/camera_indicator"
        android:contentDescription="@string/imageView" />

    <com.knx.framework.main.cameraUI.FlatCircularButton
        android:id="@+id/historyBtn"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/history_button"
        android:focusable="true"
        android:contentDescription="@string/imageButton" />
    
    <RelativeLayout
        android:id="@+id/overlayLayerUIContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" >
        
        <ImageButton
	        android:id="@+id/overlayExitBtn"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/close_button_red"
	        android:contentDescription="@string/imageButton" />
        
        <LinearLayout
	        android:id="@+id/overlayLayerUIPanel"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:orientation="horizontal" >
            
	    </LinearLayout>
        
	</RelativeLayout>
	
    <com.knx.framework.main.cameraUI.RoundedCornerView
        android:id="@+id/connection_status_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" >
        
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/default_text_color"
            android:gravity="center" />
        
    </com.knx.framework.main.cameraUI.RoundedCornerView>
    
