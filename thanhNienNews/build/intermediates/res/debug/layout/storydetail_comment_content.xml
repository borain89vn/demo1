<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/menu_header_padding_top"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_header_padding_top"
        android:layout_marginRight="@dimen/menu_header_padding_top"
        android:contentDescription="@string/boximage_contentdescription" >

        <ImageView
            android:id="@+id/iv_storycomment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/menu_header_padding_top"
            android:layout_marginRight="@dimen/menu_header_padding_top"
            android:contentDescription="@string/image_contentdescription"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_storycomment_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/storydetail_comment_title"
            android:textSize="@dimen/storydetail_comment_title" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_storycomment_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_header_padding_top"
        android:layout_marginRight="@dimen/menu_header_padding_top"
        android:background="@null"
        android:gravity="right"
        android:text="@string/comment_author_n_count"
        android:textColor="@color/storydetail_comment_author"
        android:textSize="@dimen/storydetail_comment_author" />

    <TextView
        android:id="@+id/tv_storycomment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_header_padding_top"
        android:layout_marginRight="@dimen/menu_header_padding_top"
        android:background="@null"
        android:gravity="right"
        android:textColor="@color/storydetail_comment_author"
        android:textSize="@dimen/storydetail_comment_author" />

    <TextView
        android:id="@+id/tv_storycomment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_header_padding_top"
        android:layout_marginRight="@dimen/menu_header_padding_top"
        android:textColor="@color/storydetail_comment_title"
        android:textSize="@dimen/storydetail_comment_title" />

</LinearLayout><!-- From: file:/E:/ThanhNiewNewsXuan-AS/thanhNienNews/src/main/res/layout/storydetail_comment_content.xml -->