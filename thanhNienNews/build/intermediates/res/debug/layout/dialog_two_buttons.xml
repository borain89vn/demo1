<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_two_buttons_layout"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

	<TextView
        android:id="@+id/dialog_two_buttons_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/default_theme_color"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    
    <View
        android:id="@+id/dialog_two_buttons_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_theme_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    
    <TextView
        android:id="@+id/dialog_two_buttons_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" >
        
        <Button
            android:id="@+id/dialog_two_buttons_button_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/txtNo"
            android:textColor="@color/default_theme_color"
            android:background="@android:color/transparent" />
        
        <Button
            android:id="@+id/dialog_two_buttons_button_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="@string/txtYes"
            android:textColor="@color/default_text_color"
            android:background="@color/default_theme_color" />
        
    </LinearLayout>

