<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:splitMotionEvents="false" >

    <Button
        android:id="@+id/menu_list_header_ivhome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_list_item_height"
        android:layout_marginLeft="@dimen/menu_row_item_icon_margin"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_header_home"
        android:drawablePadding="@dimen/menu_row_item_icon_margin"
        android:gravity="left|center_vertical"
        android:splitMotionEvents="false"
        android:text="@string/menu_head_home"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/menu_list_item_text"
        android:textSize="@dimen/menu_list_item_text_size" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_contentdescription"
        android:scaleType="fitXY"
        android:splitMotionEvents="false"
        android:src="@drawable/bg_menu_divider_home" />

    <Button
        android:id="@+id/menu_list_header_ivmyhome"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_list_item_height"
        android:layout_marginLeft="@dimen/menu_row_item_icon_margin"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_header_myhome"
        android:drawablePadding="@dimen/menu_row_item_icon_margin"
        android:gravity="left|center_vertical"
        android:splitMotionEvents="false"
        android:text="@string/menu_head_user_page"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/menu_list_item_text"
        android:textSize="@dimen/menu_list_item_text_size" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_contentdescription"
        android:scaleType="fitXY"
        android:splitMotionEvents="false"
        android:src="@drawable/bg_menu_divider_home" />

    <Button
        android:id="@+id/menu_list_header_ivstored"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_list_item_height"
        android:layout_marginLeft="@dimen/menu_row_item_icon_margin"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_menu_header_stored"
        android:drawablePadding="@dimen/menu_row_item_icon_margin"
        android:gravity="left|center_vertical"
        android:splitMotionEvents="false"
        android:text="@string/menu_head_user_page_saved"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/menu_list_item_text"
        android:textSize="@dimen/menu_list_item_text_size" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_contentdescription"
        android:scaleType="fitXY"
        android:splitMotionEvents="false"
        android:src="@drawable/bg_menu_divider_home" />

    <include layout="@layout/menu_list_header_search_bar" />

</merge><!-- From: file:/E:/ThanhNiewNewsXuan-AS/thanhNienNews/src/main/res/layout/menu_list_header_layout.xml -->