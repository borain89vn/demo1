<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#00000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_menu_setting_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/menu_bar_height"
        android:background="@drawable/bg_menu_setting_popup"
        android:contentDescription="@string/image_contentdescription"
        android:orientation="vertical"
        android:paddingBottom="@dimen/menu_header_height"
        android:paddingLeft="@dimen/menu_list_header_padding_top"
        android:paddingRight="@dimen/menu_list_header_padding_top"
        android:paddingTop="@dimen/menu_list_header_padding_top" >

        <Button
            android:id="@+id/btn_menu_setting_pnscheck"
            android:layout_width="@dimen/dlg_menu_setting_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_menu_setting_popup_button"
            android:minHeight="40dp"
            android:text="@string/menu_setting_pnscheck"
            android:textColor="@color/menu_list_item_text" />

        <Button
            android:id="@+id/btn_menu_setting_feedback"
            android:layout_width="@dimen/dlg_menu_setting_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/menu_header_padding_top"
            android:background="@drawable/bg_menu_setting_popup_button"
            android:minHeight="40dp"
            android:text="@string/menu_setting_feedback"
            android:textColor="@color/menu_list_item_text" />

        <Button
            android:id="@+id/btn_menu_setting_support"
            android:layout_width="@dimen/dlg_menu_setting_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/menu_header_padding_top"
            android:background="@drawable/bg_menu_setting_popup_button"
            android:minHeight="40dp"
            android:text="@string/menu_setting_support"
            android:textColor="@color/menu_list_item_text"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_menu_setting_policy"
            android:layout_width="@dimen/dlg_menu_setting_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/menu_header_padding_top"
            android:layout_marginTop="@dimen/menu_header_padding_top"
            android:background="@drawable/bg_menu_setting_popup_button"
            android:contentDescription="@string/image_contentdescription"
            android:minHeight="40dp"
            android:text="@string/menu_setting_policy"
            android:textColor="@color/menu_list_item_text" />

        <Button
            android:id="@+id/btn_menu_setting_logout"
            android:layout_width="@dimen/dlg_menu_setting_btn_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_menu_setting_popup_button"
            android:contentDescription="@string/image_contentdescription"
            android:minHeight="40dp"
            android:text="@string/menu_setting_logout"
            android:textColor="@color/menu_list_item_text" />
    </LinearLayout>

</LinearLayout><!-- From: file:/E:/ThanhNiewNewsXuan-AS/thanhNienNews/src/main/res/layout/dlg_menu_setting.xml -->