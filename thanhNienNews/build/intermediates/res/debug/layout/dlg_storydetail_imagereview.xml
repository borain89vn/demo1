<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <HorizontalScrollView
        android:id="@+id/hsv_storydetail_reviewimages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|fill_horizontal" >

        <LinearLayout
            android:id="@+id/ll_storydetail_reviewimages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" >

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/imb_storydetail_back"
        android:layout_width="@dimen/menu_header_height"
        android:layout_height="@dimen/menu_header_height"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="@dimen/padding_lvl_5dp"
        android:background="@null"
        android:contentDescription="@string/image_contentdescription"
        android:scaleType="center"
        android:src="@drawable/ic_menu_back" />

