<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_list_item_height"
    android:orientation="horizontal"
   android:splitMotionEvents="false"  >

    <ImageView
            android:id="@+id/menu_row_webevent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_row_item_icon_height"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/image_contentdescription"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu_webevent"
            android:visibility="gone"/>

    <ImageView
        android:id="@+id/menu_row_icon"
        android:layout_width="@dimen/menu_row_item_icon_width"
        android:layout_height="@dimen/menu_row_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/menu_row_item_icon_margin"
        android:layout_marginRight="@dimen/menu_row_item_icon_margin"
        android:contentDescription="@string/image_contentdescription"
        android:scaleType="centerInside"
         />

    <TextView
        android:id="@+id/menu_row_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAppearance="@android:style/TextAppearance.Medium" 
        android:textSize="@dimen/menu_list_item_text_size"
        android:textColor="@color/menu_list_item_text"/>

</LinearLayout>