<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#00000000"
        android:orientation="vertical" >

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dlg_storydetail_textmode_margin_bottom" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dlg_storydetail_textmode_margin_bottom"
            android:background="@drawable/bg_menu_storydetail_footer_textmode_spring"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_list_item_padding_top"
                android:layout_marginLeft="@dimen/menu_list_item_padding_top"
                android:layout_marginRight="@dimen/menu_list_item_padding_top"
                android:layout_marginTop="@dimen/menu_list_item_padding_top" >

                <ImageButton
                    android:id="@+id/imb_storyfooter_fontsmaller"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="@dimen/padding_lvl_5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_menu_setting_popup_button_img"
                    android:contentDescription="@string/image_contentdescription"
                    android:src="@drawable/ic_storyfooter_fontsmaller_normal" />

                <ImageButton
                    android:id="@+id/imb_storyfooter_fontbigger"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_lvl_5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_menu_setting_popup_button_img"
                    android:contentDescription="@string/image_contentdescription"
                    android:src="@drawable/ic_storyfooter_fontbigger_normal" />
            </LinearLayout>

            <ToggleButton
                android:id="@+id/tbtn_storyfooter_textmode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/menu_list_header_padding_top"
                android:layout_marginLeft="@dimen/menu_list_item_padding_top"
                android:layout_marginRight="@dimen/menu_list_item_padding_top"
                android:background="@drawable/bg_menu_setting_popup_button_img"
                android:checked="false"
                android:contentDescription="@string/image_contentdescription"
                android:focusableInTouchMode="true"
                android:minHeight="20dp"
                android:minWidth="64dp"
                android:padding="@dimen/menu_list_item_padding_top"
                android:paddingLeft="@dimen/menu_list_header_padding_top"
                android:paddingRight="@dimen/menu_list_header_padding_top"
                android:text="@string/tbtn_storydetail_textmode"
                android:textColor="@android:color/white"
                android:textOff="@string/tbtn_storydetail_textmode"
                android:textOn="@string/tbtn_storydetail_textmode"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>