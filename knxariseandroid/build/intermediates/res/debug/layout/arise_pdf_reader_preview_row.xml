<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/arise_pdf_reader_preview_width"
    android:layout_height="@dimen/arise_pdf_reader_preview_height"
    android:layout_margin="10dp" >
    
    <ImageView
        android:id="@+id/arise_pdf_reader_preview_thumbnail"
        android:layout_width="@dimen/arise_pdf_reader_preview_width"
        android:layout_height="@dimen/arise_pdf_reader_preview_thumbnail_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_image"
        android:scaleType="centerInside"
        android:contentDescription="@string/imageView" />

    <TextView
        android:id="@+id/arise_pdf_reader_preview_page_number"
        android:layout_width="@dimen/arise_pdf_reader_preview_width"
        android:layout_height="@dimen/arise_pdf_reader_preview_page_number_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="_"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:focusable="false" />
    
    <View
        android:id="@+id/arise_pdf_reader_preview_highlight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#0000FF"
        android:alpha="0.4"
        android:visibility="gone" />

</RelativeLayout>
