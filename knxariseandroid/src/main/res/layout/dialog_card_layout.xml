<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_card_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dialog_card_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/default_theme_color"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />
    
    <View
        android:id="@+id/dialog_card_layout_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_theme_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
    
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp" >
        
    	<ImageView
        	android:id="@+id/dialog_card_layout_preview_image"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@drawable/no_image" />
    </RelativeLayout>
    
    <ListView
        android:id="@+id/dialog_card_layout_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:listSelector="@android:color/transparent" >
    </ListView>
    
    <Button
        android:id="@+id/dialog_card_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/default_theme_color"
        android:visibility="gone" />

</LinearLayout>